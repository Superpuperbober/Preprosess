mixin createMenuBar (title)
    .menuFlex
        .menuItem
            if title == 'Главная страница'
                a(href="index.html")
                    span CSS
            else
                a(href="index.html") CSS
        .menuItem
            a(href="") Синтаксис CSS
        .menuItem
            a(href="") Вставка CSS
        .menuItem
            if title == 'CSS текст'
                a(href="VAR2.html")
                    span CSS текст
            else
                a(href="VAR2.html") CSS текст
        .menuItem
            if title == 'CSS шрифт'
                a(href="CSSFont.html")
                    span CSS шрифт
            else
                a(href="CSSFont.html") CSS шрифт
        .menuItem
            a(href="") Блоки