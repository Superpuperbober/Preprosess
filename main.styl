// Please delete before starting
padding = 10px
indentValue = 2vw
color = #DCDCDC
body
	background-color #164B69
	font-size 14px
	font-family arial
	display flex
	align-items center
	justify-content center
	color black
	text-align center
	flex-direction column
	padding indentValue


	.centralBlock
		width 50%
		min-height 700px
		min-width 100px
		padding indentValue
		margin @padding
		background-color #E3E3E3
		display flex
		flex-direction column

		.menuFlex
			padding padding/2
			display flex
			flex-direction row
			justify-content space-around
			span
				background-color grey
				padding 5px;
			.menuItem
				a
					text-decoration none
					font-weight: bold
					color black
				a:hover
					background-color grey
					padding 5px;//#DCDCDC

@media (max-width:600px)
	body
		background-color #164B69
		display flex
		align-items center
		justify-content center
		color black
		text-align center
		flex-direction column
		font-size 12px
		font-family arial

		.centralBlock
			width 100%
			padding indentValue
			margin @padding
			background-color #E3E3E3
			display flex
			flex-direction column
			align-items center

			.menuFlex
				display flex-inline
				width 40%
				flex-direction row
				flex-wrap wrap
				row-gap 5px
				justify-content space-between

